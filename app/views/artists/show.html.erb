<h1><%= @artist.name %></h1>
<p><%= @artist.city %></p>
<p><%= @artist.description %></p>
<p><%= @artist.technique %></p>

<%= render "reviews/reviewsform", artist: @artist, review: @review %>
<%= render 'reviews/review' %>

<% if policy(Artist).edit? %>
<%= link_to "Modifier", edit_artist_path(@artist) %>
<% end %>

<% if policy(Artist).destroy? %>
<%= link_to "Supprimer", artist_path(@artist), method: :delete, data: { confirm: "Etes-vous sûr.e de supprimer cet.te artiste ?" } %>
<% end %>


